version: "3.5"
services:

  prometheus:
    image: prom/prometheus:latest
    container_name: prometheus-sandbox
    ports:
      - 9090:9090
    networks:
      - monitoring
    environment:
      - ENV http_proxy="http://proxymwg.gva.dts.corp.local:8080"
      - ENV https_proxy="http://proxymwg.gva.dts.corp.local:8080"
      - ENV no_proxy="localhost,127.0.0.1,localaddress,.localdomain.com,dts.corp.local"
    volumes:
      - ./prometheus.yml:/etc/prometheus/prometheus.yml

  grafana:
    image: grafana/grafana:latest
    container_name: grafana-sandbox
    ports:
      - 51080:3000
    networks:
      - monitoring
    environment:
      - ENV http_proxy="http://proxymwg.gva.dts.corp.local:8080"
      - ENV https_proxy="http://proxymwg.gva.dts.corp.local:8080"
      - ENV no_proxy="localhost,127.0.0.1,localaddress,.localdomain.com,dts.corp.local"

networks:
  monitoring:
    driver: bridge
